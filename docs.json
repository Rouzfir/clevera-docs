     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/clevera_ai",
      "linkedin": "https://www.linkedin.com/company/clevera-app"
    }
  }
